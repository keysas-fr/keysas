keysas ALL=(root) EXEC,NOPASSWD: /usr/bin/keysas-sign
keysas ALL=(root) EXEC,NOPASSWD: /usr/bin/sed -i s/.*PasswordAuthentication.*/PasswordAuthentication no/ /etc/ssh/sshd_config
